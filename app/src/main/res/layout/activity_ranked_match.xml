<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222222"
    tools:context=".view.activities.RankedMatchActivity">

    <!-- Title -->
    <TextView
        android:id="@+id/rankedMatchTextTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ranked_match_title"
        android:textColor="#FFFFFF"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2" />

    <!-- Choose time text -->
    <TextView
        android:id="@+id/rankedMatchTextChooseTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Choose time"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rankedMatchTextTitle" />

    <!-- Time options layout -->
    <LinearLayout
        android:id="@+id/rankedMatchTimeOptionsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rankedMatchTextChooseTime">

        <!-- 10:00 Button -->
        <Button
            android:id="@+id/rankedMatchButton10Min"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_button_bg"
            android:text="10:00"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            tools:ignore="ButtonStyle" />

        <!-- 15:00 Button -->
        <Button
            android:id="@+id/rankedMatchButton15Min"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_gray_button_bg"
            android:text="@string/_15_00"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            tools:ignore="ButtonStyle" />

        <!-- 20:00 Button -->
        <Button
            android:id="@+id/rankedMatchButton20Min"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_gray_button_bg"
            android:text="@string/_20_00"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            tools:ignore="ButtonStyle" />
    </LinearLayout>

    <!-- Play Button -->
    <Button
        android:id="@+id/rankedMatchButtonPlay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/rounded_button_bg"
        android:minHeight="56dp"
        android:text="@string/play"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>