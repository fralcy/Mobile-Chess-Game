<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="?attr/selectableItemBackground">

    <!-- Ngày đấu -->
    <TextView
        android:id="@+id/tvDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="06/06/2025"
        android:textSize="14sp"
        android:textColor="#666"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <!-- Khu vực người chơi và kết quả -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Người chơi trắng -->
        <TextView
            android:id="@+id/tvWhitePlayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nguyễn Văn Trắng"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:drawableStart="@drawable/ic_chess_white"
            android:drawablePadding="6dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"/>

        <!-- Kết quả trắng -->
        <TextView
            android:id="@+id/tvWhiteResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thắng"
            android:textSize="14sp"
            android:textColor="#4CAF50"
            android:textStyle="bold"
            android:layout_alignBaseline="@id/tvWhitePlayer"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"/>

        <!-- Người chơi đen -->
        <TextView
            android:id="@+id/tvBlackPlayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trần Văn Đen"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:drawableStart="@drawable/ic_chess_black"
            android:drawablePadding="6dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_below="@id/tvWhitePlayer"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp"/>

        <!-- Kết quả đen -->
        <TextView
            android:id="@+id/tvBlackResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thua"
            android:textSize="14sp"
            android:textColor="#F44336"
            android:textStyle="bold"
            android:layout_alignBaseline="@id/tvBlackPlayer"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <!-- Số nước đi -->

</LinearLayout>
