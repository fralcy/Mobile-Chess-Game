<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222222"
    tools:context=".view.activities.AIMatchActivity">

    <!-- Title -->
    <TextView
        android:id="@+id/aiMatchTextTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="@string/ai_match_title"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Color Selection Section -->
    <TextView
        android:id="@+id/aiMatchTextPlayAs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/you_play_as"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aiMatchTextTitle" />

    <!-- Color Selection Buttons -->
    <LinearLayout
        android:id="@+id/aiMatchColorOptionsLayout"
        style="?android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="40dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aiMatchTextPlayAs">

        <!-- White Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:backgroundTint="@null"
            android:id="@+id/aiMatchButtonWhite"
            android:background="@drawable/property_radius_corner_btn_green"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:minHeight="48dp"
            android:text="@string/white"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <!-- Random Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:backgroundTint="@null"
            android:id="@+id/aiMatchButtonRandom"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:minHeight="48dp"
            android:text="@string/random"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <!-- Black Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:backgroundTint="@null"
            android:id="@+id/aiMatchButtonBlack"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:minHeight="48dp"
            android:text="@string/black"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Difficulty Section -->
    <TextView
        android:id="@+id/aiMatchTextDifficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/choose_difficulty"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/aiMatchColorOptionsLayout"
        app:layout_constraintTop_toBottomOf="@+id/aiMatchColorOptionsLayout" />

    <!-- Difficulty Selection Buttons -->
    <LinearLayout
        android:id="@+id/aiMatchDifficultyOptionsLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@+id/aiMatchColorOptionsLayout"
        app:layout_constraintStart_toStartOf="@+id/aiMatchColorOptionsLayout"
        app:layout_constraintTop_toBottomOf="@+id/aiMatchTextDifficulty">

        <!-- Level 1 Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:backgroundTint="@null"
            android:id="@+id/aiMatchButtonLevel1"
            android:background="@drawable/property_radius_corner_btn_green"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginEnd="4dp"
            android:minHeight="48dp"
            android:text="@string/level_1"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Level 2 Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:backgroundTint="@null"
            android:id="@+id/aiMatchButtonLevel2"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:minHeight="48dp"
            android:text="@string/level_2"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Level 3 Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:backgroundTint="@null"
            android:id="@+id/aiMatchButtonLevel3"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:minHeight="48dp"
            android:text="@string/level_3"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Level 4 Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:backgroundTint="@null"
            android:id="@+id/aiMatchButtonLevel4"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:minHeight="48dp"
            android:text="@string/level_4"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Level 5 Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:backgroundTint="@null"
            android:id="@+id/aiMatchButtonLevel5"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginStart="4dp"
            android:minHeight="48dp"
            android:text="@string/level_5"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Play Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:backgroundTint="@null"
        android:id="@+id/aiMatchButtonPlay"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/property_radius_corner_btn_green"
        android:minHeight="48dp"
        android:text="@string/play"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/aiMatchColorOptionsLayout"
        app:layout_constraintStart_toStartOf="@+id/aiMatchColorOptionsLayout"
        app:layout_constraintTop_toBottomOf="@+id/aiMatchDifficultyOptionsLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>