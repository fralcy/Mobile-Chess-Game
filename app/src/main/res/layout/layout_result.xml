<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialogChessResult"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp"
    android:background="@color/dark_gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <!-- Kết quả: Thắng / Thua -->
        <TextView
            android:id="@+id/textResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You Win!"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Nguyên nhân: Chiếu hết / Đầu hàng / ... -->
        <TextView
            android:id="@+id/textReasonEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Checkmate"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginBottom="24dp" />

        <!-- Nút quay lại -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonBack_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BACK"
            android:background="@drawable/property_radius_corner_btn_gray"
            android:textColor="@color/white" />
    </LinearLayout>
</RelativeLayout>
